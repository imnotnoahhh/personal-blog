---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404: Not Found">
    <div
        class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4"
    >
        <img
            src="/404-face.png"
            alt="404 Face"
            class="w-48 h-48 object-contain mb-8 text-[var(--color-border)] select-none opacity-80"
        />
        <h2 class="text-2xl font-bold text-[var(--color-text-main)] mb-4">
            Page Not Found
        </h2>
        <p class="text-[var(--color-text-muted)] mb-8 max-w-md">
            Looks like you've ventured into the void. The page you're looking
            for doesn't exist or has been moved.
        </p>
        <a
            href="/"
            class="px-6 py-3 rounded-lg bg-[var(--color-primary)] text-[var(--color-primary-fg)] font-medium hover:opacity-90 transition-opacity"
        >
            Return Home
        </a>
    </div>
</Layout>
