<div
    class="relative w-full aspect-square max-w-[420px] mx-auto hidden md:block"
>
    <!-- Abstract Background Blob -->
    <div
        class="absolute inset-0 bg-gradient-to-tr from-[var(--color-primary)] to-purple-500 rounded-full opacity-20 blur-3xl animate-pulse-slow"
    >
    </div>

    <!-- Main Image Container -->
    <div
        class="relative z-10 w-full h-full p-6 flex items-center justify-center animate-float"
    >
        <!-- Using the transparent favicon as the main visual -->
        <img
            src="/favicon.png"
            alt="Noah Qin Avatar"
            class="w-64 h-64 object-contain drop-shadow-2xl hover:scale-105 transition-transform duration-500"
        />
    </div>
</div>

<style>
    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.2;
            transform: scale(1);
        }
        50% {
            opacity: 0.3;
            transform: scale(1.1);
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
    }
</style>
