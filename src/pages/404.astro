---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404: Not Found">
    <div
        class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4"
    >
        <h1
            class="text-9xl font-bold text-zinc-200 dark:text-zinc-800 mb-4 select-none"
        >
            404
        </h1>
        <h2 class="text-2xl font-bold text-zinc-900 dark:text-white mb-4">
            Page Not Found
        </h2>
        <p class="text-zinc-500 mb-8 max-w-md">
            Looks like you've ventured into the void. The page you're looking
            for doesn't exist or has been moved.
        </p>
        <a
            href="/"
            class="px-6 py-3 rounded-lg bg-zinc-900 dark:bg-zinc-100 text-white dark:text-zinc-900 font-medium hover:opacity-90 transition-opacity"
        >
            Return Home
        </a>
    </div>
</Layout>
