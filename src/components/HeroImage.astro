---
import { Image } from "astro:assets";
---

<div
    class="relative w-full aspect-square max-w-[320px] mx-auto hidden md:block"
>
    <!-- Abstract Background Blob -->
    <div
        class="absolute inset-0 bg-gradient-to-tr from-[var(--color-primary)] to-purple-500 rounded-full opacity-20 blur-3xl animate-pulse-slow"
    >
    </div>

    <!-- Main Image Container -->
    <div
        class="relative z-10 w-full h-full p-6 flex items-center justify-center animate-float"
    >
        <div
            class="relative w-48 h-48 bg-[var(--color-card)] rounded-3xl shadow-2xl flex items-center justify-center border border-[var(--color-border)] glass-effect overflow-hidden"
        >
            <!-- Using the SVG favicon as the main visual -->
            <img
                src="/favicon.svg"
                alt="Noah Qin Avatar"
                class="w-28 h-28 object-contain drop-shadow-lg"
            />

            <!-- Shine effect -->
            <div
                class="absolute inset-0 bg-gradient-to-tr from-white/20 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-500"
            >
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.2;
            transform: scale(1);
        }
        50% {
            opacity: 0.3;
            transform: scale(1.1);
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
    }
</style>
