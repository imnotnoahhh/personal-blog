      <div class="w-[calc(100%-4rem)] md:w-[calc(50%-2.5rem)] p-4 rounded-xl border border-[var(--color-border)] bg-[var(--color-card)] hover:shadow-md transition-all shadow-sm">
        <div class="flex items-center justify-between space-x-2 mb-1">
          <div class="font-bold text-[var(--color-text-main)]">{event.title}</div>
          <time class="font-mono text-xs text-[var(--color-primary)]">{event.year}</time>
        </div>
        <div class="text-[var(--color-text-muted)] text-sm">
            {event.description}
        </div>
      </div>
    </div>
  ))}
